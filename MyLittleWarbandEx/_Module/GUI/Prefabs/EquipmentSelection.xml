<Prefab>
	<Constants>
		<Constant Name="Encyclopedia.Frame.Width" BrushLayer="Default" BrushName="Encyclopedia.Frame" BrushValueType="Width" />
		<Constant Name="Encyclopedia.Frame.Height" BrushLayer="Default" BrushName="Encyclopedia.Frame" BrushValueType="Height" />

		<Constant Name="Top.Height" Value="240" />
		<Constant Name="Top.VerticalDivider.Height" Value="!Top.Height" />
		<Constant Name="Top.VerticalDivider.Width" Value="15" />
		<Constant Name="Top.VerticalDivider.Thin.Width" Value="7" />

		<Constant Name="Reference.AlphaFactor" Value="0" />
	</Constants>
	<Window>
		<Widget WidthSizePolicy="StretchToParent" HeightSizePolicy="StretchToParent" Sprite="BlankWhiteSquare_9" Color="#000000CC">
			<Standard.PopupCloseButton HorizontalAlignment="Center" VerticalAlignment="Center" MarginTop="940" Command.Click="Close" Parameter.ButtonText="Leave" />
			<Children>
				
				<!--Background-->
				<BrushWidget Id="TownManagementPopup" DoNotAcceptEvents="true" WidthSizePolicy="Fixed" HeightSizePolicy="Fixed" SuggestedWidth="!Encyclopedia.Frame.Width" SuggestedHeight="!Encyclopedia.Frame.Height" HorizontalAlignment="Center" VerticalAlignment="Center" MarginBottom="35" Brush="Encyclopedia.Frame" ReserveManagementPopup="ReservePopup">
					<Children>
						<!--title-->
						<Widget WidthSizePolicy="Fixed" HeightSizePolicy="Fixed" SuggestedWidth="720" SuggestedHeight="155" HorizontalAlignment="Center" VerticalAlignment="Top" PositionXOffset="6" PositionYOffset="-18" Sprite="StdAssets\tabbar_popup" IsDisabled="true">
							<Children>
								<RichTextWidget WidthSizePolicy="CoverChildren" HeightSizePolicy="CoverChildren" HorizontalAlignment="Center" VerticalAlignment="Center" PositionYOffset="-25" Brush="Recruitment.Popup.Title.Text" Brush.FontSize="46" IsDisabled="true" Text="Select Equipment" />
							</Children>
						</Widget>
						<Widget Id="FilterButtons"  WidthSizePolicy="Fixed" HeightSizePolicy="Fixed" HorizontalAlignment="Right" VerticalAlignment="Top" SuggestedHeight="55" SuggestedWidth="500"  MarginTop="100" MarginRight="50" >
							<Children>
								<ButtonWidget WidthSizePolicy="Fixed" HeightSizePolicy="Fixed" SuggestedHeight="25" SuggestedWidth="100" HorizontalAlignment="Right" VerticalAlignment="Top" Brush="ButtonBrush1" Command.Click="FilterEquipmentPopup"  MarginTop="0" MarginRight="0" IsEnabled="true">
									<Children>
										<RichTextWidget DoNotAcceptEvents="true" WidthSizePolicy="Fixed" HeightSizePolicy="Fixed" SuggestedHeight="25" SuggestedWidth="100" VerticalAlignment="Center" Brush="OverlayPopup.ButtonText" Brush.FontSize="12"	Text="@EquipmentFilterButton" />
									</Children>
								</ButtonWidget>
								<ButtonWidget WidthSizePolicy="Fixed" HeightSizePolicy="Fixed" SuggestedHeight="25" SuggestedWidth="100" HorizontalAlignment="Right" VerticalAlignment="Top" Brush="ButtonBrush1" Command.Click="FilterTiersPopup"  MarginTop="0" MarginRight="120" IsEnabled="true">
									<Children>
										<RichTextWidget DoNotAcceptEvents="true" WidthSizePolicy="Fixed" HeightSizePolicy="Fixed" SuggestedHeight="25" SuggestedWidth="100" VerticalAlignment="Center" Brush="OverlayPopup.ButtonText" Brush.FontSize="12"	Text="Filter Tiers" />
									</Children>
								</ButtonWidget>
								<ButtonWidget WidthSizePolicy="Fixed" HeightSizePolicy="Fixed" SuggestedHeight="25" SuggestedWidth="100" HorizontalAlignment="Right" VerticalAlignment="Top" Brush="ButtonBrush1" Command.Click="FilterCulturesPopup"  MarginTop="0"  MarginRight="240"  IsEnabled="true">
									<Children>
										<RichTextWidget DoNotAcceptEvents="true" WidthSizePolicy="Fixed" HeightSizePolicy="Fixed" SuggestedHeight="25" SuggestedWidth="100" VerticalAlignment="Center" Brush="OverlayPopup.ButtonText" Brush.FontSize="12"	Text="Filter Cultures" />
									</Children>
								</ButtonWidget>

								<ButtonWidget WidthSizePolicy="Fixed" HeightSizePolicy="Fixed" SuggestedHeight="25" SuggestedWidth="25" HorizontalAlignment="Right" VerticalAlignment="Bottom" MarginRight="100" Brush="Popup.CloseButton" Command.Click="FilterEquipmentClear" IsEnabled="true"/>
								<ButtonWidget WidthSizePolicy="Fixed" HeightSizePolicy="Fixed" SuggestedHeight="25" SuggestedWidth="25" HorizontalAlignment="Right" VerticalAlignment="Bottom" MarginRight="220" Brush="Popup.CloseButton" Command.Click="FilterTierClear" IsEnabled="true" />
								<ButtonWidget WidthSizePolicy="Fixed" HeightSizePolicy="Fixed" SuggestedHeight="25" SuggestedWidth="25" HorizontalAlignment="Right" VerticalAlignment="Bottom" MarginRight="340" Brush="Popup.CloseButton" Command.Click="FilterCulturesClear" IsEnabled="true"/>
								<RichTextWidget Text="@EquipmentFilter" SuggestedWidth="100" SuggestedHeight="20" HorizontalAlignment="Right" VerticalAlignment="Bottom" MarginRight="0" TextHorizontalAlignment="Left" Brush="Recruitment.Popup.Title.Text" Brush.FontSize="12"/>
								<RichTextWidget Text="@TierFilter" SuggestedWidth="100" SuggestedHeight="20" HorizontalAlignment="Right" VerticalAlignment="Bottom"  MarginRight="120" TextHorizontalAlignment="Left" Brush="Recruitment.Popup.Title.Text" Brush.FontSize="12" />								
								<RichTextWidget Text="@CultureFilter" SuggestedWidth="100" SuggestedHeight="20" HorizontalAlignment="Right" VerticalAlignment="Bottom"  MarginRight="240" TextHorizontalAlignment="Left" Brush="Recruitment.Popup.Title.Text" Brush.FontSize="12"  />
								
								
							</Children>
						</Widget>
						<ButtonWidget WidthSizePolicy="Fixed" HeightSizePolicy="Fixed" SuggestedHeight="25" SuggestedWidth="100" HorizontalAlignment="Left" VerticalAlignment="Top" Brush="ButtonBrush1" Command.Click="EquipmentViewSortPopup"  MarginTop="120" MarginLeft="50" IsEnabled="true">
							<Children>
								<RichTextWidget DoNotAcceptEvents="true" WidthSizePolicy="Fixed" HeightSizePolicy="Fixed" SuggestedHeight="25" SuggestedWidth="100" VerticalAlignment="Center" Brush="OverlayPopup.ButtonText" Brush.FontSize="12"	Text="@SortByText" />
							</Children>
						</ButtonWidget>
						<ButtonWidget WidthSizePolicy="Fixed" HeightSizePolicy="Fixed" SuggestedHeight="25" SuggestedWidth="70" HorizontalAlignment="Left" VerticalAlignment="Top" Brush="ButtonBrush1" Command.Click="EquipmentViewSortOrder"  MarginTop="120" MarginLeft="170" IsEnabled="true">
							<Children>
								<RichTextWidget DoNotAcceptEvents="true" WidthSizePolicy="Fixed" HeightSizePolicy="Fixed" SuggestedHeight="25" SuggestedWidth="70" VerticalAlignment="Center" Brush="OverlayPopup.ButtonText" Brush.FontSize="12" Text="@AscendingText" />
							</Children>
						</ButtonWidget>
						<ButtonWidget WidthSizePolicy="Fixed" HeightSizePolicy="Fixed" SuggestedHeight="25" SuggestedWidth="70" HorizontalAlignment="Left" VerticalAlignment="Top" Brush="ButtonBrush1" Command.Click="ShowEmptyToggle" ButtonType="Toggle" MarginTop="120" MarginLeft="270" IsEnabled="true" IsSelected="@ShowEmpty">
							<Children>
								<RichTextWidget DoNotAcceptEvents="true" WidthSizePolicy="Fixed" HeightSizePolicy="Fixed" SuggestedHeight="25" SuggestedWidth="70" VerticalAlignment="Center" Brush="OverlayPopup.ButtonText" Brush.FontSize="12" Text="Include Empty" />
							</Children>
						</ButtonWidget>
						<ScrollablePanel WidthSizePolicy="Fixed" HeightSizePolicy="StretchToParent" SuggestedWidth="1360" MarginTop="180" MarginBottom="50" HorizontalAlignment="Center" MouseScrollAxis="Vertical" ClipRect="ListClipRect" InnerPanel="ListClipRect\List" VerticalScrollbar="..\RightSideScrollbar" AutoHideScrollBars="false">
							<Children>
								<Widget Id="ListClipRect" WidthSizePolicy="StretchToParent" HeightSizePolicy="StretchToParent" ClipContents="true">
									<Children>
										<ListPanel Id="List" DataSource="{Rows}" WidthSizePolicy="CoverChildren" HeightSizePolicy="CoverChildren" StackLayout.LayoutMethod="VerticalBottomToTop">
											<ItemTemplate>
												<EquipmentCardRow ButtonType="Radio" />
											</ItemTemplate>
										</ListPanel>
									</Children>
								</Widget>

							</Children>
						</ScrollablePanel>

						<ScrollbarWidget HeightSizePolicy="Fixed" WidthSizePolicy="CoverChildren" Id="RightSideScrollbar" MinValue="0" MaxValue="100" MarginRight="20" MarginTop="180" AlignmentAxis="Vertical" HorizontalAlignment="Right"  SuggestedHeight="750" Handle="RightSideScrollbarHandle" UpdateChildrenStates="true">
							<Children>
								<ImageWidget HeightSizePolicy="StretchToParent" WidthSizePolicy="Fixed" SuggestedWidth="2" VerticalAlignment="Center" Brush="Encyclopedia.Scrollbar.Flat.Bed"/>
								<ImageWidget Id="RightSideScrollbarHandle" WidthSizePolicy="Fixed" HeightSizePolicy="Fixed" SuggestedWidth="8" SuggestedHeight="50" VerticalAlignment="Top" Brush="Encyclopedia.Scrollbar.Flat.Handle"/>
							</Children>
						</ScrollbarWidget>
					</Children>
				</BrushWidget>
				
				
				
				<!--Close Encyclopedia Button-->
				<ButtonWidget Command.Click="Close" HeightSizePolicy ="Fixed" WidthSizePolicy="Fixed" SuggestedHeight="100" SuggestedWidth="100" VerticalAlignment="Center" HorizontalAlignment="Center" PositionYOffset="-465" MarginLeft="1440" Brush="Popup.CloseButton"/>

			</Children>
		</Widget>
	</Window>
</Prefab>